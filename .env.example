# Teams Transcription Bot - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Use Azure System Assigned Managed Identities wherever possible

# Azure AD & Graph API Configuration
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# Azure Subscription
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=teams-bot-rg

# Azure Speech Services
AZURE_SPEECH_KEY=your-speech-service-key-here
AZURE_SPEECH_REGION=eastus

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=yourkey;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER=transcripts

# Bot Framework Configuration
BOT_APP_ID=your-bot-app-id-here
BOT_APP_PASSWORD=your-bot-password-here

# Teams Configuration
TEAMS_APP_ID=your-teams-app-id-here

# Key Vault (Optional - for production)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Application Insights (Optional - for monitoring)
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key-here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development

# Port Configuration (for local development)
PORT=3978

# CORS Settings (for local development)
CORS_ORIGINS=http://localhost:3000,http://localhost:3978

# Feature Flags
ENABLE_SPEAKER_DIARIZATION=true
ENABLE_REAL_TIME_TRANSCRIPTION=true
ENABLE_TRANSCRIPT_STORAGE=true
MAX_CONCURRENT_MEETINGS=10

# Performance Settings
TRANSCRIPTION_BUFFER_SIZE_SECONDS=5
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1